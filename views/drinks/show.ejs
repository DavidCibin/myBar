<%- include('../partials/header') %>

    <div id="show-page">

        <div class="show-image">
            <img src="<%=drink.imageUrl%>">
        </div>

        <div class="show-details">

            <div class="drink-recipe">
                <h1>
                    <%=drink.drink%>
                </h1>
                <p>Prep time: <%=drink.prepTime%> || Servings: <%=drink.servings%></p>
                <p>Ingredients: <%=drink.ingredients%></p>
                <p>Instructions: <%=drink.prepTime%></p>
                <p>Garnish: <%=drink.prepTime%></p>
                <p>Alcohol: <%=drink.servings%></p>
            </div>

            <div class="show-btns">
                <a href="/drinks/<%= drink._id %>/edit" class="btn btn-primary del-btn" data-toggle="button" aria-pressed="false" autocomplete="off">Update Drink</a>
                
                    <% if (user.drinks.includes(drink._id)) { %>
                        <form action="/drinks/<%= drink._id %>/myBooze/?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-primary del-btn" data-toggle="button" aria-pressed="false" autocomplete="off">Unsave Drink</button>    
                        </form>
                    <% } else { %>
                        <form action="/drinks/<%= drink._id %>/myBooze" method="POST">
                            <button type="submit" class="btn btn-primary del-btn" data-toggle="button" aria-pressed="false" autocomplete="off">Save Drink</button>
                        </form>
                    <% } %>
            </div>   
        
            
        </div>
    </div>

    <div class="reviews">
        
        <% if (drink.reviews.length) { %>
            <div class="review-out"></div>
            <% drink.reviews.forEach(r=> { %>
    
                <img src="<%= r.postedBy.avatar %>">
                <span>Name: <%= r.postedBy.name %></span>
                <span>Rate: <%= r.rating %></span>
                <span>Review: <%= r.content %></span><br>
    
            <% }) %>
            </div>
    
        <% } %>
        <div class="review-in">
            <form action="/drinks/<%=drink._id%>" method="POST">
                <span>Rate(1-5): </span>
                <select name="rating">
                    <option></option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
                <span>Leave a Review: </span>
                <input type="text" name="content">
                <input type="text" hidden name="postedBy" value="<%= user._id %>">
                <button type="submit" class="btn btn-primary" data-toggle="button" aria-pressed="false" autocomplete="off">Post review</button>
                
            </form>                
        </div>

    </div>

<%- include('../partials/footer.ejs') %>