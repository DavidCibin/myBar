<%- include('../partials/header') %>

    <h1>Drink details check</h1>

    <div id="show-page">

        <div class="show-image">
            <img src="<%=drink.imageUrl%>">
        </div>

        <div class="show-details">

            <% if (user.drinks.includes(drink._id)) { %>
                
                <form action="/drinks/<%= drink._id %>/myBooze/?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-primary del-btn" data-toggle="button" aria-pressed="false" autocomplete="off">Unsave Drink</button>    
                </form>
    

            <% } else { %>

                
                <form action="/drinks/<%= drink._id %>/myBooze" method="POST">
                    <button type="submit" class="btn btn-primary del-btn" data-toggle="button" aria-pressed="false" autocomplete="off">Save Drink</button>
                </form>


            <% } %>

            
            <h2>
                <%=drink.drink%>
            </h2>
            <p>Prep time: <%=drink.prepTime%></p><br>
            <p>Servings: <%=drink.servings%></p><br>
            <p>Ingredients: <%=drink.ingredients%></p><br>
            <p>Instructions: <%=drink.prepTime%></p><br>
            <p>Garnish: <%=drink.prepTime%></p><br>
            <p>Alcohol: <%=drink.servings%></p><br>


            </form>
            <br>
            <form action="/drinks/<%=drink._id%>?_method=PUT" method="POST">
                <a>Drink: </a>
                <input type="text" name="drink" value="<%=drink.drink%>"><br>
                <a>Prep time: </a>
                <input type="number" name="prepTime" value="<%=drink.prepTime%>" required max="99" min="1" maxlength="2"
                    class="input"><br>
                <button type="submit">Update drink</button>
            </form>
        </div>
    </div>

    <% if (drink.reviews.length) { %>

        <% drink.reviews.forEach(r=> { %>

            <img src="<%= r.avatar %>">
            <a>Name: <%= r.postedBy.name %></a>
            <a>Rate: <%= r.rating %></a>
            <a>Review: <%= r.content %></a><br>

            <% }) %>

                <% } %>

                    <form action="/drinks/<%=drink._id%>" method="POST">
                        <a>Rate(1-5): </a>
                        <select name="rating">
                            <option></option>
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                        </select>
                        <a>Leave a Review: </a>
                        <input type="text" name="content"><br>
                        <input type="text" hidden name="postedBy" value="<%= user._id %>">
                        <button type="submit">Post review</button>
                    </form>

                    <a href="/drinks">Back to Index</a>

<%- include('../partials/footer.ejs') %>